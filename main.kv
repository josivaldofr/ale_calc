#:kivy 2.0.0
<BotaoRedondo@Button>:
    background_color: 0, 0, 0, 0
    background_normal: ''
    background_down: ''
    font_size: 32
    canvas.before:
        Color:
            rgba: 0.5, 0.5, 0.5, 1
        Ellipse:
            pos: self.pos
            size: self.size
    size_hint: None, None
    size: 85, 85

<Calculadora>:
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: 0.8, 0.8, 0.8, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 0.2
        padding: 10
        spacing: 10

        RelativeLayout:
            size_hint: None, None
            size: 50, 50  # Ajusta o tamanho do RelativeLayout para comportar a imagem

            Image:
                source: 'senai-logo.png'
                size_hint: None, None
                size: 159, 159  # Define o tamanho da logo
                pos_hint: {'center_x': 1.5, 'center_y': 0.5}  # Centraliza a imagem dentro do RelativeLayout

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 1

            Label:
                id: formula
                text: ''
                font_size: 48  # Ajuste o tamanho da fonte conforme necessário
                halign: 'right'
                valign: 'middle'
                text_size: self.size
                color: 0, 0, 0, 1

            Label:
                id: result
                text: ''
                font_size: 38  # Ajuste o tamanho da fonte conforme necessário
                halign: 'right'
                valign: 'middle'
                text_size: self.size
                color: 0, 0, 0, 1

    GridLayout:
        cols: 4
        spacing: 10
        padding: 10
        size_hint_y: 0.7

        canvas.before:
            Color:
                rgba: 0.2, 0.2, 0.2, 1
            Rectangle:
                pos: self.pos
                size: self.size

        BotaoRedondo:
            color: 0, 0, 0, 1
            text: '9'
            on_press: root.atualizar_display('9')
        BotaoRedondo:
            color: 0, 0, 0, 1
            text: '8'
            on_press: root.atualizar_display('8')
        BotaoRedondo:
            color: 0, 0, 0, 1
            text: '7'
            on_press: root.atualizar_display('7')
        BotaoRedondo:
            color:  0, 0, 0.2, 1
            text: '+'
            on_press: root.atualizar_display('+')
        BotaoRedondo:
            color: 0, 0, 0, 1
            text: '6'
            on_press: root.atualizar_display('6')
        BotaoRedondo:
            color: 0, 0, 0, 1
            text: '5'
            on_press: root.atualizar_display('5')
        BotaoRedondo:
            color: 0, 0, 0, 1
            text: '4'
            on_press: root.atualizar_display('4')
        BotaoRedondo:
            color: 0, 0, 0.2, 1
            text: '-'
            on_press: root.atualizar_display('-')
        BotaoRedondo:
            color: 0, 0, 0, 1
            text: '3'
            on_press: root.atualizar_display('3')
        BotaoRedondo:
            color: 0, 0, 0, 1
            text: '2'
            on_press: root.atualizar_display('2')
        BotaoRedondo:
            color: 0, 0, 0, 1
            text: '1'
            on_press: root.atualizar_display('1')
        BotaoRedondo:
            color: 0, 0, 0.2, 1
            text: '/'
            on_press: root.atualizar_display('/')
        BotaoRedondo:
            color: 0, 0, 0, 1
            text: '0'
            on_press: root.atualizar_display('0')
        BotaoRedondo:
            color: 0, 0, 0, 1
            text: '.'
            on_press: root.atualizar_display('.')
        BotaoRedondo:
            color:  0, 0.2, 0, 1
            text: '='
            on_press: root.calcular()
        BotaoRedondo:
            color: 0, 0, 0.2, 1
            text: '*'
            on_press: root.atualizar_display('*')
        BotaoRedondo:
            color: 0, 0, 0, 1
            text: '%'
            on_press: root.atualizar_display('%')
        BotaoRedondo:
            color: 0.5, 0, 0, 1
            text: 'C'
            on_press: root.limpar_display()
        BotaoRedondo:
            color: 0.5, 0, 0, 1
            text: '<-'
            on_press: root.limpar_um_caracter()
        BotaoRedondo:
            color: 0, 0, 0.2, 1
            text: '+/-'
            on_press: root.inverter_sinal()
